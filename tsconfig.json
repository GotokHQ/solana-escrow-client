{
    "compilerOptions": {
      "outDir": "./lib",
      "allowJs": true,
      "checkJs": true,
      "declaration": true,
      "declarationMap": true,
      "noImplicitAny": false,
      "resolveJsonModule": true,
      "sourceMap": true,
      "allowSyntheticDefaultImports": true,
      "typeRoots": ["src/types", "node_modules/@types"],
    },
    "include": ["./src/**/*"],
    "exclude": ["./src/**/*.test.js", "node_modules", "**/node_modules"]
  }